<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical" >

    <LinearLayout
        android:id="@+id/all_the_things"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/landmark_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Landmark Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/landmark_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landmark Category"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/landmark_location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landmark Location"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/landmark_call_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickCallPhone"
            android:text="Landmark Phone Number" />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/landmark_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickFacebook"
                android:text="Facebook" />

            <Button
                android:id="@+id/landmark_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickEvents"
                android:text="See Events" />
        </LinearLayout>

        <TextView
            android:id="@+id/landmark_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landmark Description" />
    </LinearLayout>

</ScrollView>