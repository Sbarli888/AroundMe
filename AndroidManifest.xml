<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.feup.aroundme"
      android:versionCode="1"
      android:versionName="1.0">
    <application
      android:theme="@style/Theme.D1"
      android:icon="@drawable/icon" 
      android:label="@string/app_name">
      <activity android:name=".HomeActivity"
                  android:label="@string/app_name">
         <intent-filter>
             <action android:name="android.intent.action.MAIN" />
             <category android:name="android.intent.category.LAUNCHER" />
         </intent-filter>
      </activity>

      <activity android:name=".EventsDescriptionActivity"
      	android:theme="@style/Theme.D1"/>
      
      <activity android:name=".EventsFacebookListActivity"
      	android:theme="@style/Theme.D1"/>    
      
      <activity android:name=".EventsMenuActivity"
            android:theme="@style/Theme.D1"/>
      
      <activity android:name=".EventsMenuCategoriesActivity"
            android:theme="@style/Theme.D1"/>      
      
      <activity android:name=".other.fb.FacebookConnect"
            android:theme="@style/Theme.D1"/>
      
      <activity android:name=".FacebookGoodiesActivity"
            android:theme="@style/Theme.D1"/>
      
      <activity android:name=".SettingsActivity"
            android:theme="@style/Theme.D1"/>
      
            <activity android:name=".SettingsFacebookActivity"
            android:theme="@style/Theme.D1"/>

      <activity android:name=".ShowMapActivity"
            android:theme="@style/Theme.D1"/>
      
      <activity android:name=".SuperActivity"
            android:theme="@style/Theme.D1"/>
      
      <!--   run  keytool -list -alias androiddebugkey -keystore ~/.android/debug.keystore -storepass android -keypass android
      		 and copy the result in https://developers.google.com/android/maps-api-signup  -->
      <uses-library android:name="com.google.android.maps"/>
      
      </application>
      <uses-sdk android:minSdkVersion="8" />
    
     <!-- Connect to Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    
    

</manifest> 
